@model HortifrutiSF.MVC.Models.LoginViewModel



<body id="login">
    <div class="main-login">
        <div class="right-login">
            <div class="card-login">
                <div class="col-md-10">
                    <center><h1>Bem Vindo</h1></center>

                    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">

                        @*<input type="hidden" asp-for="ReturnUrl" />*@

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="text-field">
                            <label for="Usuario">Usuário</label>
                            <input asp-for="Usuario" name="Usuario" placeholder="Usuario" class="form-control" />
                            <span asp-validation-for="Usuario" class="text-danger"></span>
                        </div>

                        <div class="text-field">

                            <label for="Password">Senha</label>
                            <input asp-for="Senha" type="password" placeholder="Usuario" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>



                        <div class="form-group">

                            <button type="submit" class="btn-login">Login</button>
                        </div>

                        <center>
                            <h4>
                                <p>
                                    <a asp-action="Register">Cadastre-se agora</a>
                                </p>
                            </h4>
                        </center>
                    </form>

                </div>
            </div>
        </div>
    </div>

</body>