@model HortifruitiSF.Application.ViewModel.VendaViewModel

@{
    ViewData["Title"] = "Realizar Venda";
}

<h1>Realizar Venda</h1>


<hr />
<div class="container-venda">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label for="Quantidade">Quantidade</label>
            <input asp-for="QuantidadeVenda" class="form-control" />
            <span asp-validation-for="QuantidadeVenda" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ProdutoId">Produto</label>
            <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.produtos"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Finalizar Venda" class="botao-finalizar" />
        </div>
        @if (ViewBag.Mensagem2 == "Alerta")
        {
            <div class="alert alert-success" role="alert" @ViewBag.Mensagem2;>
                <h4 class="alert-heading">Muito bem!</h4>
                <p>Venda Realizada com Sucesso !</p>
                <hr>
                <p class="mb-0"></p>


            </div>
        }

        @if (ViewBag.Mensagem2 == "Erro")
        {
            <div class="alert alert-danger" role="alert">
                <p>Não foi possível realizar a venda.</p>
            </div>
        }



    </form>
</div>


<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}