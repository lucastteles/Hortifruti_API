@model IEnumerable<HortifruitiSF.Application.Dto.VendaDto>

@{
    ViewData["Title"] = "Vendas";
}

<h1>Sistema de Vendas</h1>
<br />
<p>

    <a class="btn-produto" id="VendaId" asp-controller="Venda"
       asp-action="Create" asp-route-id="VendaId">Realizar Venda</a>
</p>
<br />
<br />

<h4>Relatório de Lucros</h4>

 <a class="btn-produto" id="VendaId" asp-controller="Lucro"
       asp-action="Index" asp-route-id="VendaId">Relatório</a>
<br />
<br />


<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal">
            <fieldset>
                <legend><b>Vendas por Período</b></legend>
                <div class="form-group">
                    <label for="dataInicial" class="col-lg-6 control-label">Data Inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataInicial" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataFinal" class="col-lg-6 control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataFinal" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                Quantidade Vendida
            </th>
            <th>
                Produto
            </th>
            <th>
                Valor Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantidadeVenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    <a class="btn btn-outline-danger" id="VendaId" asp-controller="Venda"
                   asp-action="Delete" asp-route-id="@item.VendaId">Deletar</a>

                </td>
            </tr>
        }
    </tbody>
</table>
