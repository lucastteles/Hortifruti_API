@model HortifruitiSF.Application.Dto.VendaDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Venda</h1>

<h3>Você tem certeza que deseja deletar esta Venda ?</h3>
<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Produto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
         Quantidade Vendida
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeVenda)
        </dd>
        <dt class = "col-sm-2">
          Valor Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>       

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VendaId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
