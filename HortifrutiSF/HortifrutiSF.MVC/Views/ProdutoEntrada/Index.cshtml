@model IEnumerable<HortifruitiSF.Application.Dto.ProdutoEntradaDto>

@{
    ViewData["Title"] = "Entrada de produtos";
}

<h1>Entrada de Produtos</h1>

<p>
    <a asp-action="Create">Registrar Entrada De Produtos</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
               Produto
            </th>
             <th>
               Preço
            </th>
            <th>
               Quantidade
            </th>            
            <th>
               Peso
            </th>
            <th>
               Fornecedor
            </th>

           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>  
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProdutoEntrada">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProdutoEntrada">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProdutoEntrada">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>